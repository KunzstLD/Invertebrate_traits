	date = {2006},
	file = {Eingereichte Version:/home/kunz/Zotero/storage/GZRT9PFE/Poff et al. - 2006 - Functional trait niches of North American lotic in.pdf:application/pdf;Snapshot:/home/kunz/Zotero/storage/MPK2NMN3/0887-3593(2006)025[0730FTNONA]2.0.html:text/html}
