        shortjournal = {Glob. Change Biol.},
        author = {Wilkes, Martin A. and Edwards, François and Jones, J. Iwan and Murphy, John F. and England, Judy and Friberg, Nikolai and Hering, Daniel and Poff, N. {LeRoy} and Usseglio‐Polatera, Philippe and Verberk, Wilco C. E. P. and Webb, Jon and Brown, Lee E.},
        urldate = {2020-10-22},
        date = {2020},
        langid = {english},
        file = {Wilkes et al. - 2020 - Trait‐based ecology at large scales Assessing fun.pdf:/home/kunzst/Zotero/storage/UYZ68J8C/Wilkes et al. - 2020 - Trait‐based ecology at large scales Assessing fun.pdf:application/pdf}
}

