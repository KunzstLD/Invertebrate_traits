	number = {11},
	journaltitle = {Science of The Total Environment},
	author = {Schäfer, Ralf B. and Kefford, Ben J. and Metzeling, Leon and Liess, Matthias and Burgert, Sinje and Marchant, Richard and Pettigrove, Vincent and Goonan, Peter and Nugegoda, Dayanthi},
